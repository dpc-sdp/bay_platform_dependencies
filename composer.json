{
  "name": "dpc-sdp/bay_platform_dependencies",
  "description": "Drupal integrations and dependency management for the Bay hosting platform.",
  "type": "drupal-module",
  "license": "GPL-2.0-or-later",
  "require": {
    "drush/drush": "^11",
    "drupal/purge": "^3.4",
    "drupal/section_purge": "dev-3307199-drupal-10-compatibility",
    "drupal/redis": "1.6",
    "drupal/smtp": "^1.2",
    "dpc-sdp/tide_logs": "dev-feature/SRM-874-d10-update",
    "cweagans/composer-patches": "^1.7"
  },
  "config": {
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "enable-patching": true,
    "patches": {
      "drupal/redis": {
        "Implement initial RedisCluster client integration - https://www.drupal.org/project/redis/issues/2900947#comment-14779350": "https://www.drupal.org/files/issues/2022-11-10/2900947-57.patch"
      }
    }
  },
  "exclude": [
    "drupal/section_purge"
  ],
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/10",
      "exclude": [
        "drupal/section_purge"
      ]
    },
    "drupal/section_purge": {
      "type": "git",
      "url": "https://git.drupalcode.org/issue/section_purge-3307199"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
